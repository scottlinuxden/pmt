CREATE TABLE inventory (
    id character varying(4),
    po_id character varying(4),
    po_number character varying(10),
    po_project_id character varying(20),
    project_id character varying(20),
    line_item character varying(20),
    quantity character varying(5),
    description character varying(1024),
    unit_price character varying(12),
    total_unit_price character varying(12),
    subtotal character varying(12),
    shipping_handling character varying(12),
    tax_exempt character varying(12),
    po_total character varying(12),
    quote_number character varying(12),
    property_id_number character varying(20),
    prop_id_assigned_by_username character varying(8),
    prop_id_assigned_by_password character varying(8),
    prop_id_assigned_by_signature character varying(40),
    prop_id_assigned_by_sig_func character varying(5),
    date_property_id_assigned date,
    property_location character varying(50),
    serial_number character varying(20),
    part_number character varying(20),
    category character varying(22)
);


